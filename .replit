entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-25_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run Trading System"

[[workflows.workflow]]
name = "Run Trading System"
author = 36496812
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Run Backtesting Test"
author = 36496812
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_trading_system.py"
